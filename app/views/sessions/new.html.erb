<% if flash[:alert] %>
  <p id="notice"><%= flash[:alert] %> </p>
<% end %>

<form class  ="form-horizontal"
      action ="/login"
      method ="post">
<%= token_tag form_authenticity_token() %>
  <div class ="control-group">
    <label class="control-label" for="name">Username</label>
    <div class="controls">
      <input type="text" name="name" placeholder="mthompson">
    </div>
  </div>

  <div class="control-group">
    <label class="control-label" for="password">Password</label>
    <div class="controls">
      <input type="password" name="password" placeholder="SugarBear">
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
      <select name="db">
        <option>flexd_production</option>
        <option>lookout_analytics</option>
        <option>cashier</option>
       </select>
     </div>
  </div>

  <div class="control-group">
    <div class="controls">
      <button type="submit" class="btn">Sign in</button>
    </div>
  </div>
</form>
